<%- include('./includes/head') %> 


<main class="min-vh-100 d-flex align-items-center justify-content-center  py-5 bg-dark bg-gradient">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-6 bg-white rounded">

        <form action="/cadastrar" method="POST" class="p-5">

          <header class="mb-5">
            <a href="/"><i class="bi-arrow-left text-body fs-2"></i></a>
            <div class="display-5">Crie em uma conta</div>

            <%- include('./includes/messages') %> 
          </header>
          
          <input type="hidden" name="_csrf" value=<%= csrfToken %>>

          <!-- Nome -->
          <div class="mb-3">
            <label for="name" class="form-label">Nome</label>
            <input type="text" class="form-control" name="name" id="name" required autofocus>
          </div>

          <!-- Email -->
          <div class="mb-3">
            <label for="email" class="form-label">E-mail</label>
            <input type="email" class="form-control" name="email" id="email" required>
          </div>

          <!-- Senha -->
          <div class="mb-3">
            <label for="password" class="form-label">Senha</label>
            <input type="password" class="form-control" name="password" id="password" required>
          </div>

          <div class="d-flex justify-content-between align-items-end">
            <button type="submit" class="btn-lg btn-dark bg-gradient px-5">Criar conta</button>
            <a href="/entrar" class="link-primary">JÃ¡ possuo uma conta.</a>
          </div>
        </form>

      </div>
    </div>
  </div>
</main>


<%- include('./includes/footer') %> 
