<% if( errors && errors.length > 0 ) {%>
  <div class="text-danger mt-3">
    <% errors.forEach(erro => { %> 
      <div>
        <%= erro %>
      </div>
    <% }) %> 
  </div>
<% } %>

<% if( success && success.length > 0 ) {%>
  <div class="text-success mt-3">
    <% success.forEach(success => { %> 
      <div>
        <%= success %>
      </div>
    <% }) %> 
  </div>
<% } %>